{
  "name": "Recflow",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Test your website on real mobile devices.",
  "homepage_url": "http://www.recflow.com",
  "icons": {
    "16": "icons/recflow_icon_16x16.png",
    "48": "icons/recflow_icon_48x48.png",
    "128": "icons/recflow_icon_128x128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/background/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "RecFlow",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "css": [
        "src/content_script/content_script.css"
      ]
    },
    {
      "matches": [
        "http://*/*", "https://*/*"
      ],
      "js": [
        "src/content_script/content_script.js"
      ]
    }
  ]
}